{
	"name": "fresh-test",
	"version": "0.1.0",
	"main": "build/index.js",
	"private": true,
	"dependencies": {
		"apollo-server-express": "^2.11.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"faker": "^4.1.0",
		"graphql": "^15.0.0",
		"graphql-iso-date": "^3.6.1",
		"lodash-id": "^0.14.0",
		"lowdb": "^1.0.0",
		"merge-graphql-schemas": "^1.7.7"
	},
	"devDependencies": {
		"@babel/cli": "7.7.4",
		"@babel/core": "7.7.4",
		"@babel/node": "7.7.4",
		"@babel/preset-env": "7.7.4",
		"cpx": "^1.5.0",
		"eslint-import-resolver-babel-module": "^5.1.2",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.3",
		"lint-staged": "^10.1.2",
		"nodemon": "^2.0.2",
		"xo": "^0.28.3"
	},
	"scripts": {
		"start": "NODE_ENV=development yarn build && SENTRY_LOG_OFF=1 nodemon --http-parser=legacy src/index.js",
		"clean": "rm -rf build",
		"build": "yarn clean && babel src -d build && cpx \"src/**/*.graphql\" build"
	},
	"babel": {
		"plugins": [
			[
				"module-resolver",
				{
					"root": [
						"./"
					],
					"alias": {
						"~schema": "./src/schema",
						"~utils": "./src/utils"
					}
				}
			]
		],
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			]
		]
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules/**/node_modules"
		],
		"env": {
			"NODE_ENV": "development"
		},
		"execMap": {
			"js": "babel-node -r node_modules/dotenv/config src/index.js"
		},
		"ext": "js, graphql"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"xo --fix",
			"git add"
		]
	},
	"xo": {
		"env": [
			"node"
		],
		"settings": {
			"import/resolver": {
				"babel-module": {
					"alias": {
						"~schema": "./src/schema",
						"~utils": "./src/utils"
					}
				}
			}
		}
	}
}
